{
  "manifest_version": 3,
  "name": "GitLab Deployment Info",
  "version": "1.0",
  "description": "Generate information related to deployment in GitLab repos.",
  "permissions": ["tabs", "scripting", "storage", "clipboardWrite"],
  "host_permissions": ["https://gitlab.com/*"],
  "action": {
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gitlab.com/*/*/releases/new", "https://gitlab.com/*/*/*/releases/new"],
      "js": ["content.js"]
    }
  ]
}